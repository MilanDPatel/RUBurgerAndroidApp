<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recycleapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/appleslices"
        android:label="@string/app_name"
        android:roundIcon="@drawable/appleslices"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecyclerViewSampleCode">

        <!-- Activity shown when an item is selected -->
        <activity
            android:name=".ItemSelectedActivity"
            android:label="Item Selected Activity"
            android:parentActivityName=".MainMenuActivity"
            android:exported="false" />

        <!-- Activity showing drinks RecyclerView -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Activity showing sides RecyclerView -->
        <activity
            android:name=".SidesActivity"
            android:exported="false" />

        <activity
            android:name=".BurgerActivity"
            android:exported="false" />

        <activity
            android:name=".ComboActivity"
            android:exported="false" />

        <activity
            android:name=".SandwichActivity"
            android:exported="false" />

        <!-- If you plan to implement the ComboActivity as well, add this too -->

        <!-- Launcher activity with menu buttons -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
